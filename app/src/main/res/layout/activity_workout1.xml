<!--            />-->

        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/spnSquat"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:background="@drawable/spinner_background"
            android:spinnerMode="dropdown"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="6dp"
            app:layout_constraintTop_toTopOf="parent"
            />

        <Button
            android:id="@+id/set1"
            android:layout_width="@dimen/setWidth"
            android:layout_height="@dimen/setWidth"
            android:layout_marginStart="@dimen/setMarginStart"
            android:layout_marginTop="@dimen/setMarginTop"
            android:background="@drawable/round_inactive_button"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="@string/_0"
            app:layout_constraintTop_toTopOf="parent"
            />

        <Button
            android:id="@+id/set2"
            android:layout_width="@dimen/setWidth"
            android:layout_height="@dimen/setWidth"
