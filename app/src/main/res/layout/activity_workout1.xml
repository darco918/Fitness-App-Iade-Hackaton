            android:layout_height="@dimen/setWidth"
            android:layout_marginStart="@dimen/setMarginStart"
            android:layout_marginTop="@dimen/setMarginTop"
            android:background="@drawable/round_inactive_button"
            app:layout_constraintLeft_toRightOf="@+id/bench5"
            app:layout_constraintTop_toTopOf="parent"
            android:text="@string/_0"

            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/deadliftContainer"
        android:layout_width="match_parent"
        android:layout_height="@dimen/workoutHeight"
        android:layout_marginHorizontal="@dimen/workoutMarginHoriz"
        android:layout_marginTop="20dp"
        android:background="@drawable/inactive_workout_background"
        app:layout_constraintTop_toBottomOf="@id/benchContainer"
        >

        <TextView
            android:id="@+id/tvThirdxercise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="8dp"
            android:text="@string/deadlift"
            android:textColor="@color/textLight"
            android:textSize="25sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/spnDead"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:background="@drawable/spinner_background"
            android:spinnerMode="dropdown"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="6dp"
            app:layout_constraintTop_toTopOf="parent"
            />

